<%- include('partials/header'); %>
    <div id="heading" class="box">
      <h1><%= listTitle %></h1>
    </div>

    <div class="box">
      <form class="item input_items" action="/" method="post">
        <input type="text" name="new_Item_Name" placeholder="item name" autocomplete="off"/>
        <input type="text" name="new_Item_desc" placeholder="item's description" autocomplete="off"/>
        <input type="number" name="new_Item_price" placeholder="item's price" autocomplete="off"/>
        <button type="submit" name ="list" value= "<%= listTitle %>" > +</button>
      </form>

      <%for(var i = 0; i < newListItems.length; i++){%>

        <form action="/delete" method="post">
          <div class="item new_items">
            <input type="checkbox"  name="checkbox" value="<%= newListItems[i]._id%>" onchange="this.form.submit()">
            <p id="item_name"><%= newListItems[i].name %></p>
            <p id="item_description"><%= newListItems[i].description %></p>
            <p id="item_price"><%= newListItems[i].price %></p>
          </div>
          <input type="hidden" name="listName" value="<%= listTitle %>"> </input>
        </form>

      <%}%>
    </div>
<%- include('partials/footer'); %>